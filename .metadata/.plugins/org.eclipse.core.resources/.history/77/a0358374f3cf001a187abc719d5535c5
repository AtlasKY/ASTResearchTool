

import org.codehaus.groovy.ast.ClassNode
import org.codehaus.groovy.ast.builder.AstBuilder
import org.codehaus.groovy.control.CompilePhase
import org.codehaus.groovy.control.CompilerConfiguration



class CTAnalysisDriver {
	
	static main(def args) {
		
		def proj_root = "C:/Users/AtlasKaan/Desktop/EclipseASTWorkspace/ASTAnalysis/src"
		
		def demo_file = new File(proj_root + "/BrightenMyPath.groovy")
		
		CompilerConfiguration cc = new CompilerConfiguration(CompilerConfiguration.DEFAULT)
		
		CTAnalysisAST ctal = new CTAnalysisAST()
		
		cc.addCompilationCustomizers(ctal)
		
		GroovyShell gshell = new GroovyShell(cc)
		
		println("Analysing Fuck" + demo_file.getName() + " .")
		
		gshell.evaluate(demo_file)
		
		println("Analysis Done!")
		
		
		
	}
}
